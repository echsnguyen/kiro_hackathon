# Application
APP_NAME=AI Allied Health Assessment Automator
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/allied_health_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AWS S3 (for audio storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=allied-health-audio-storage
AWS_S3_ENCRYPTION=AES256

# Azure Blob Storage (alternative to S3)
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_STORAGE_CONTAINER=allied-health-audio

# Encryption
# Generate a new key with: python -c "import os, base64; print(base64.b64encode(os.urandom(32)).decode())"
ENCRYPTION_KEY=your-encryption-key-base64-encoded-32-bytes
ENCRYPTION_ALGORITHM=AES-256-GCM

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth 2.0 (Auth0 or AWS Cognito)
OAUTH_PROVIDER=auth0
OAUTH_DOMAIN=your-domain.auth0.com
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_AUDIENCE=your-api-audience

# AI Services
# OpenAI Whisper (self-hosted or API)
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cpu
WHISPER_API_URL=http://localhost:9000  # If using self-hosted

# Google Gemini
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=8192

# Pyannote.audio (speaker diarization)
PYANNOTE_AUTH_TOKEN=your-huggingface-token
PYANNOTE_MODEL=pyannote/speaker-diarization-3.1

# Portal Integration
PORTAL_API_URL=https://portal.example.com/api
PORTAL_API_KEY=your-portal-api-key
PORTAL_API_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload
MAX_UPLOAD_SIZE_MB=500
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,flac,ogg

# Processing
TRANSCRIPTION_TIMEOUT_SECONDS=300
EXTRACTION_TIMEOUT_SECONDS=120
DIARIZATION_TIMEOUT_SECONDS=180

# Compliance
PII_REDACTION_ENABLED=False
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
DATA_RETENTION_POLICY=zero
